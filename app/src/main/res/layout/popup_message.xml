        android:layout_marginLeft="@dimen/dp_10">

        <com.ruffian.library.widget.RTextView
            android:id="@+id/requreTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="要求：" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/sanguangTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/requreTv"
            android:text="不散光(9)"
            android:textColor="@color/white"
            app:background_normal="@color/main_red_color_40"
            app:corner_radius="5dp"

            />

        <com.ruffian.library.widget.RTextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/sanguangTv"
            android:text="男（20）"
            android:textColor="@color/white"
            app:background_normal="@color/color_F7AF34_40"
            app:corner_radius="5dp" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/selectTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/requreTv"
            android:layout_marginTop="@dimen/dp_10"
            android:text="可选时间段"
            android:textColor="@color/black" />

        <com.ruffian.library.widget.RImageView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_below="@id/requreTv"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/selectTime"
            android:src="@mipmap/selecttime" />


    </com.ruffian.library.widget.RRelativeLayout>

    <com.ruffian.library.widget.RTextView
