            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/addressTv"
            android:text="中山大学心理学系系楼303D"
            android:textColor="@color/black" />

    </com.ruffian.library.widget.RRelativeLayout>

    <com.ruffian.library.widget.RRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10">

        <com.ruffian.library.widget.RTextView
            android:id="@+id/simpleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简介：" />

        <com.ruffian.library.widget.RTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/simpleTv"
            android:text="实验超简单！主试超级好！欢迎大家来报名呀呀呀，还差五个差五个男生五个女生！！！！"
            android:textColor="@color/black" />

    </com.ruffian.library.widget.RRelativeLayout>

    <com.ruffian.library.widget.RRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10">

        <com.ruffian.library.widget.RTextView
            android:id="@+id/evaluateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评价：" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/desTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/evaluateTv"
            android:text="主试超温柔！！(9)"
            android:textColor="@color/white"
            app:background_normal="@color/color_main"
            app:corner_radius="5dp" />

        <com.ruffian.library.widget.RTextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/desTv"
            android:text="实验轻松（8）"
            android:textColor="@color/white"
            app:background_normal="@color/color_main"
            app:corner_radius="5dp" />
    </com.ruffian.library.widget.RRelativeLayout>

    <com.ruffian.library.widget.RRelativeLayout
