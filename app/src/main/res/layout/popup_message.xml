<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <com.ruffian.library.widget.RRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.ruffian.library.widget.RImageView
            android:id="@+id/iconIv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_ava" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/textTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iconIv"
            android:layout_toRightOf="@id/iconIv"
            android:text="文字识别任务"
            android:textSize="18sp" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/fiveTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/textTv"
            android:layout_marginLeft="100dp"
            android:layout_toRightOf="@id/textTv"
            android:text="5.0分"
            android:textColor="@color/color_F7AF34"
            android:textSize="18sp" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/tenTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textTv"
            android:layout_alignLeft="@id/textTv"
            android:text="￥10"
            android:textColor="@color/greed_4E"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/twentyTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textTv"
            android:layout_marginLeft="200dp"
            android:text=" 约 20 min"
            android:textColor="@color/greed_4E"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/distenceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tenTv"
            android:layout_alignLeft="@id/tenTv"
            android:text="距离你约 0.4 km" />

        <com.ruffian.library.widget.RImageView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@id/distenceTv"
            android:layout_marginLeft="150dp"
            android:src="@mipmap/logoiv" />

    </com.ruffian.library.widget.RRelativeLayout>

    <com.ruffian.library.widget.RRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10">

        <com.ruffian.library.widget.RTextView
            android:id="@+id/addressTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地点：" />

        <com.ruffian.library.widget.RTextView
