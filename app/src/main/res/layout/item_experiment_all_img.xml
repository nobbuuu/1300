<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgIv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="@dimen/dp_2"
        android:src="@mipmap/psychology"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/imgIv"
        app:layout_constraintStart_toStartOf="@+id/imgIv"
        app:layout_constraintTop_toBottomOf="@+id/imgIv">

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="min"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <TextView
        android:id="@+id/topNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="消费决策"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12"
        app:layout_constraintEnd_toEndOf="@+id/imgIv"
        app:layout_constraintStart_toStartOf="@+id/imgIv"
        app:layout_constraintTop_toTopOf="@+id/imgIv" />

    <TextView
        android:id="@+id/botNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="¥10"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="@+id/imgIv"
        app:layout_constraintEnd_toEndOf="@+id/imgIv"
        app:layout_constraintStart_toStartOf="@+id/imgIv" />
</androidx.constraintlayout.widget.ConstraintLayout>